<% if @task.errors.any? %>
    <h4>Opps! Something went wrong:</h4>
    <ul>
        <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= simple_form_for @task, html:{class:'form-signin'} do |f| %>
    <%= f.input :content, label: false, preceholder: 'Content',
    autofocus: true  %>
    

    <%= f.button :submit, class:'btn btn-primary btn-block' %>
<% end %>
<%= link_to 'All tasks', tasks_path %>